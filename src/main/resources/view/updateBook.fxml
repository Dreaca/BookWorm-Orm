        <TextField fx:id="txtBookTitle" layoutX="101.0" layoutY="79.0" prefHeight="25.0" prefWidth="200.0" promptText="Book Title" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: cyan;" />
        <TextField fx:id="txtAuthor" layoutX="101.0" layoutY="121.0" prefHeight="25.0" prefWidth="200.0" promptText="Author" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: cyan;" />
