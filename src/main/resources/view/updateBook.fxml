        <Label layoutX="19.0" layoutY="169.0" text="Genre          :">
            <font>
                <Font name="Microsoft YaHei" size="12.0" />
            </font></Label>
        <Label layoutX="19.0" layoutY="214.0" text="Availability  :">
            <font>
                <Font name="Microsoft YaHei" size="12.0" />
            </font></Label>
        <JFXButton buttonType="RAISED" layoutX="251.0" layoutY="251.0" onAction="#updateBookOnAction" style="-fx-border-color: lime;" text="Save" />
        <JFXButton buttonType="RAISED" layoutX="181.0" layoutY="251.0" onAction="#cancelOnAction" style="-fx-border-color: red;" text="Cancel" />
