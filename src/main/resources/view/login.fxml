<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.LoginController">
   <children>
      <TextField fx:id="txtUsername" layoutX="126.0" layoutY="123.0" prefHeight="25.0" prefWidth="348.0" promptText="User Name" />
      <PasswordField fx:id="txtPassword" layoutX="126.0" layoutY="175.0" onAction="#loginOnAction" prefHeight="25.0" prefWidth="348.0" promptText="Password" />
      <JFXButton buttonType="RAISED" layoutX="274.0" layoutY="236.0" onAction="#loginOnAction" style="-fx-background-color: lime;" text="Login" />
      <JFXButton buttonType="RAISED" layoutX="271.0" layoutY="302.0" onAction="#signUpOnAction" style="-fx-background-color: deeppink;" text="Sign Up" />
      <JFXToggleButton fx:id="toggleButton" contentDisplay="GRAPHIC_ONLY" layoutX="474.0" layoutY="160.0" prefHeight="58.0" prefWidth="76.0" text="Show Password" onAction="#togglePasswordVisibility"/>
   </children>
</AnchorPane>
